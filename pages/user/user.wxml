<view class="userInfo1">
  <view class='user'>
    <view class="{{buttonStatus}}">
      <image src='../../icon/noavatar.png' class="avatar"></image>
    </view>
    <image src='{{userInfo.avatarUrl}}' class="{{info}} avatar"></image>

    <view class="name" >{{userInfo.nickName}}</view>
    <view class='careers'>职业方向：暂无</view>
    <view hidden='{{section}}' class='{{info}} section'>所属部门 | 职位名称</view>

  </view>
  <!-- <view hidden='{{bindphone}}' class='{{info}} phone' bindtap='bindphone'>绑定手机</view>
  <view class='{{info}} phone'hidden='{{remphone}}'  bindtap='remphone'>解绑手机</view>  -->

  <view class='trainingplan'>
    <view class='.trainingplan1' bindtap='edit_industry'>
      <text class='number'>0</text>
      <text class='text1'>理想行业</text>
    </view>
    <view class='.trainingplan1' bindtap='edit_company'>
      <text class='number'>0</text>
      <text class='text1'>目标公司</text>
    </view>
    <view class='.trainingplan1' bindtap='edit_entrepreneur'>
      <text class='number'>0</text>
      <text class='text1'>关注的企业家</text>
    </view>
    <view class='border'></view>
    <text class='warning'>您距离完善 个人培养方案 还需4步 </text>
  </view>
</view>
  
<view class='userInfo2'>
  <view class="{{info}} my" bindtap="linkWork">
    <image src='../../icon/work.png' class='work'></image>
    <text>我的作品</text>
    <image src='../../icon/borrow.png' class='borrow'></image>
  </view>
  <view class="{{info}} my" bindtap="linkCollect">
    <image src='../../icon/collect.png' class='collect'></image>
    <text>我的收藏</text>
    <image src='../../icon/borrow.png' class='borrow'></image>
  </view>
  <view class="{{info}} my" bindtap="linkTopic">
    <image src='../../icon/topic.png' class='collect'></image>
    <text>我的话题</text>
    <image src='../../icon/borrow.png' class='borrow'></image>
  </view>
  <view class='{{info}} my' bindtap="feedBack">
    <image src='../../icon/setup.png' class='collect'></image>
    <text>意见反馈</text>
    <image src='../../icon/borrow.png' class='borrow'></image>
  </view>
  <view class='{{buttonStatus}} tip0'>*登录后，这里将出现你的作品，你的收藏等，我们将优化你的推荐引擎。</view>

  <button open-type="getUserInfo" bindgetuserinfo="getUserInfo" type="primary" bindtap='onLoad' class="{{buttonStatus}} login">授权登录</button>
</view>

<view class='aboutus'>
  <text style='display: block; margin: 10rpx 20rpx 0; font-size: 30rpx'>关于我们</text>
  <view class='QRcode'>公众号</view>
  <view class='QRcode'>网站</view>
</view>