.header {
  width: 600rpx;
  padding: 15rpx;
  margin: 50rpx auto 0;
  text-align: center;
  color: #17aff8;
  font-size: 60rpx;
}

.title {
  margin-bottom: 40rpx;
  color: #17aff8;
  font-size: 40rpx;
  font-weight: bolder;
}

.inform{
  height: auto;
  width: 650rpx;
  margin: 10rpx auto;
  padding: 40rpx 30rpx 20rpx;
  font-size: 30rpx;
  background-color: white;  
  border: solid 5rpx #17aff8;
  border-radius: 20rpx
}

.text{
  width: 650rpx;
  word-break: break-all;
  line-height: 60rpx;
  margin: 20rpx auto;
  padding-bottom: 20rpx
}

button{
  display: inline-block;
  height: auto;
  line-height: 60rpx;
  padding: 5rpx 20rpx;
  margin: 0 20rpx -20rpx;
  background-color:#17AFF8;
  color: white;
  font-size: 30rpx; 
}

input {
  border: 1rpx solid #ccc;
  margin-top: 20rpx;
  width: 550rpx;
  height: 60rpx;
}