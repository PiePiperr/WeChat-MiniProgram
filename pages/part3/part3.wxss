button {
  width: 650rpx;
  height: auto;
  margin: 0 auto;
  background-color: #17aff8;
  color: white;
  font-size: 33rpx;
}

.content {
  width: 610rpx;
  height: auto;
  margin: 0 auto;
  padding: 20rpx;
  background-color: #17aff8;
  color: white;
  border-radius: 5px;
  font-size: 33rpx;
  line-height: 70rpx;
  text-align: center;
  word-wrap: break-word;
  user-select: text;
  -webkit-user-select: text;
}

.arrow {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 0 auto;
}

.container {
  display: flex;
  flex-direction: column;
  width: 650rpx;
  height: auto;
  margin: 0 auto;
  padding: 20rpx;
  background-color: #17aff8;
  border: solid #17aff8 1rpx;
  border-radius: 5px;
}

.inputarea {
  display: flex;
  font-size: 30rpx;
}

input {
  display: inline-block;
  background-color: white;
  margin-left: 30rpx;
  width: 300rpx;
  height: 50rpx;
  padding: 10rpx;
  border-radius: 20rpx;
  color: rgba(16, 16, 16, 1);
  text-align: left;
  border: 1px solid rgba(187, 187, 187, 1);
}

.title {
  width: 150rpx;
  height: 50rpx;
  padding: 10rpx;
  color: white
}
