page{
  background-color: white
}

.searchArea {
  width: auto;
  background-color: #17aff8;
  display: flex;
  padding: 15rpx 0;
  align-content: center;
}

.searchInput {
  background-color: white;
  margin-left: 30rpx;
  width: 700rpx;
  height: auto;
  border-radius: 20rpx;
  color: rgba(16, 16, 16, 1);
  text-align: left;
  border: 1px solid #e7e7e7;
}

.searchInput image {
  height: 50rpx;
  width: 50rpx;
  float: left;
  margin: 10rpx;
}

.searchInput input {
  font-size: 30rpx;
  padding: 10rpx;
}

.header {
  position: fixed;
  top: 0;
  width: 100%;
  background-color: white;
}

.none {
  display: flex;
  flex-direction: column;
  align-items: center;
  position: absolute;
  top: 35%;
  width: 100%;
  color: #8a8a8a
}

.none image {
  width: 300rpx;
  height: 200rpx;
}

.nav_bar {
  display: flex;
  justify-content: space-between;
  width: 100%;
}

.icon {
  width: 43rpx;
  height: 43rpx;
  flex-shrink: 0;
  padding: 20rpx;
}

.nav {
  width: 660rpx;
  padding-left: 10rpx;
  white-space: nowrap;
}

.nav text {
  display: table-cell;
  vertical-align: bottom;
  font-size: 35rpx;
  padding: 15rpx 15rpx 5rpx;
}

.selected {
  font-weight: bold;
  border-bottom: 5px solid #17aff8;
}

.cat_bar {
  display: flex;
  justify-content: space-around;
  width: inherit;
  background-color: RGB(247, 247, 250);
  padding: 15rpx 0;
  font-size: 30rpx;
  text-align: left;
}

.info {
  width: 25rpx;
  height: 25rpx;
  margin-left: 20rpx;
}

button {
  height: 60rpx;
  font-size: 25rpx;
  margin-left: 20rpx;
}

.reload {
  margin-top: 40rpx;
  padding: 30rpx 50rpx;
  font-size: 40rpx;
  color: rgb(243, 243, 243);
  background-color: #8a8a8a;
  border-radius: 10px;
}

.list {
  margin-top: 255rpx;
  background-color: white;
}

.item {
  display: flex;
  justify-content: space-around;
  width: 100%;
  border-bottom: 1rpx solid #f0f0f0;
  padding: 20rpx 0;
  font-size: 30rpx;
  user-select: auto;
}

.flex_item1 {
  width: 35%;
}

.flex_item2 {
  width: 25%;
}

.flex_item3 {
  width: 20%;
}

.cat {
  display: block;
  height: 40rpx;
  font-size: 26rpx;
  color: #aaa;
  width: 100%;
}