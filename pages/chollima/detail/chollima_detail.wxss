.header {
  width: 720rpx;
  margin: 10rpx auto;
  box-shadow: 0 0 1px black;
  border-radius: 20rpx;
  padding: 30rpx 0;
  background-color: white  
}

.container {
  width: 720rpx;
  margin: 40rpx auto;
  padding: 20rpx;
  box-shadow: 0 0 1px black;
  border-radius: 20rpx;
  background-color: white
}

.title {
  width: 100%;
  padding-bottom: 15rpx;
  font-size: 35rpx;
  font-weight: bold
}

.company {
  padding: 8rpx;
  display: flex;
}

.com_info {
  width: 500rpx;
  padding: 20rpx 10rpx 0
}

.com_intro {
  font-size: 20rpx;
  color: 40rpx;
  display: block;
  width: 490rpx;
  line-height: 35rpx;
  margin-left: 5rpx;
}

.co_sub {
  width: 130rpx;
  height: 55rpx;
  float: right;
  padding: block;
  line-height: 55rpx;
  font-size: 30rpx;
  margin: 15rpx 30rpx 0rpx 0rpx;
}

.memo {
  display: flex;
  margin-top: 14rpx;
  padding-left: 20rpx;
  font-size: 30rpx;
  flex-wrap: wrap;
}

.memo text {
  margin-left: 20rpx;
  font-size: 30rpx;
  align-items: center;
  justify-content: center;
}

.tags {
  height: 30rpx;
  width: auto;
  border: 1rpx solid #000;
  font-size: 20rpx;
  word-wrap: normal;
  text-align: center;
  border-radius: 8rpx;
  padding: 0rpx 10rpx;
  margin:0 10rpx 10rpx 0;
}

.logo {
  display: block;
  width: 200rpx;
  height: 200rpx;
  margin: 8rpx;
}

.invest {
  margin-top: 20rpx;
  padding-left: 20rpx;
  font-size: 30rpx
}

.bp_li {
  display: inline-block;
  font-size: 30rpx;
  margin-bottom: 15rpx;
}

.team {
  width: 100%;
}

.person {
  display: flex;
  padding: 0 20rpx;
  margin-top: 20rpx;
}

.per_logo {
  display: block;
  width: 150rpx;
  height: 150rpx;
  margin-right: 20rpx;
  flex-shrink: 0
}

.per_info {
  font-size: 35rpx;
}
.per_intro{
  width: inherit;
  font-size: 25rpx;
  height: 100rpx;
  word-wrap: normal;
  color: #aaa
}

.sub {
  display: block;
  font-size: 20rpx;
  height: 50rpx;
  width: 120rpx;
}

.per_intro {
  font-size: 20rpx;
}

.mil_list {
  width: 100%;
  height: 400rpx;
}

.milestone {
  display: flex;
  padding: 0 30rpx;
}

.mil_line {
  display: flex;
  flex-direction: column;
  justify-content: center;
  width: 10rpx;
}

.line {
  width: 2px;
  height: 50%;
  background-color: #aaa;
  align-self: center;
}

.dot {
  width: 8px;
  height: 8px;
  background-color: #f86;
  border-radius: 50%;
  align-self: center;
}

.mil_text {
  padding: 10rpx 30rpx;
  font-size: 25rpx;
}

.pro_list {
  width: 100%;
}

.product {
  display: flex;
  justify-content: space-around;
  width: 100%;
  font-size: 30rpx;
}

.similar {
  white-space: nowrap;
  height: 250rpx;
}

.sim_com {
  display: inline-block;
  margin: 20rpx 10rpx;
}

.com_name {
  font-size: 30rpx;
  text-align: center;
}

.com_logo {
  width: 130rpx;
  height: 130rpx;
}
