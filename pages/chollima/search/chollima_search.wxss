.searchArea {
  width: auto;
  background-color: #17aff8;
  display: flex;
  padding: 15rpx 0;
  align-content: center;
}

.searchInput {
  background-color: white;
  margin-left: 30rpx;
  width: 700rpx;
  height: auto;
  border-radius: 20rpx;
  color: rgba(16, 16, 16, 1);
  text-align: left;
  border: 1px solid #e7e7e7;
}

.searchInput image {
  height: 50rpx;
  width: 50rpx;
  float: left;
  margin: 10rpx;
}

.searchInput input {
  font-size: 30rpx;
  padding: 10rpx;
}

.content {
  background-color: white;
  margin-bottom: 10rpx;
}

.title {
  position: relative;
  padding: 20rpx;
  font-size: 32rpx;
  border-bottom: 1rpx solid #eee;
}

.save {
  position: absolute;
  right: 40rpx;
  top: 10rpx;
  width: 140rpx;
  height: 60rpx;
  line-height: 60rpx;
  font-size: 26rpx;
  color: black;
  background-color: white;
}

.none {
  font-size: 32rpx;
  margin: 17rpx;
}

.company {
  display: flex;
  font-size: 30rpx;
  flex-direction: row;
  flex-wrap: wrap;
  padding: 20rpx;
}

.com_name {
  width: auto;
  font-size: 13px;
  flex: 0 0 auto;
  margin: 5px;
  padding: 10rpx 20rpx;
  border-radius: 5px;
  background-color: #e9e9e9;
}

.delete {
  margin: auto 10rpx;
  width: 23rpx;
  height: 23rpx;
}

.companyList {
  height: auto;
}

.list {
  display: flex;
  justify-content: space-between;
  margin: 10rpx 20rpx;
  padding: 20rpx;
  align-content: center;
  background-color: rgb(250, 254, 255);
  border: 1px solid #e7e7e7;
  border-radius: 5px;
  font-size: 30rpx;
}

.sub {
  display: block;
  height: 60rpx;
  width: 120rpx;
  font-size: 25rpx;
}

.tip {
  text-align: center;
  padding: 20rpx 0;
  font-size: 30rpx;
  color: #8d8d8d;
  background-color: #d1d1d1;
}
